<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment4">

    <!-- TODO: Update blank fragment layout -->



    <ImageView
        android:id="@+id/profile_background"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/profile_background" />

    <TextView
        android:id="@+id/nation"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ffff"
        android:text="nation" />

    <TextView
        android:id="@+id/name"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#ffff"
        android:text="name" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="142dp"
        android:layout_height="102dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/text_notice"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:layout_below="@+id/profile_background"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="NOTICE"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/notice_all"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_below="@+id/profile_background"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:text="See All"
        android:textColor="#1c47f4" />

    <TextView
        android:id="@+id/text_category"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_below="@+id/text_notice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="57dp"
        android:text="CATEGORY"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_contentOfNotice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/text_notice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:text="content" />

    <Button
        android:id="@+id/btn_market"
        android:layout_width="115dp"
        android:layout_height="155dp"
        android:layout_below="@+id/text_category"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_market"/>

    <Button
        android:id="@+id/btn_help"
        android:layout_width="115dp"
        android:layout_height="155dp"
        android:layout_below="@+id/text_category"
        android:layout_marginStart="6dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btn_market"
        android:background="@drawable/help" />

    <Button
        android:id="@+id/btn_msgbox"
        android:layout_width="115dp"
        android:layout_height="155dp"
        android:layout_below="@+id/text_category"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@+id/btn_help"
        android:background="@drawable/btn_msgbox" />

</RelativeLayout>